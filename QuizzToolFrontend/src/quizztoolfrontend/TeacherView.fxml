<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quizztoolfrontend.TeacherViewController">
   <top>
      <HBox styleClass="banner">
         <children>
            <Label text="Quizz Tool">
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <VBox styleClass="content">
         <children>
            <Label styleClass="header" text="Results:" />
            <VBox styleClass="studentView">
               <children>
                  <ComboBox fx:id="cbCourses" onAction="#onCourseChange" prefWidth="150.0" promptText="Choose Course" styleClass="combobox" />
                  <ComboBox fx:id="cbQuizzes" layoutX="30.0" layoutY="57.0" onAction="#onQuizzChange" prefWidth="150.0" promptText="Choose Test" styleClass="combobox" />
                  <ListView fx:id="lwResult" prefHeight="200.0" prefWidth="200.0" />
                  <PieChart fx:id="chGrades" prefHeight="201.0" prefWidth="420.0" />
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
