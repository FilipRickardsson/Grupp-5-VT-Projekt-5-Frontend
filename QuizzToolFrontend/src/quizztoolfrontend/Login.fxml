<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quizztoolfrontend.LoginController">
   <top>
      <HBox styleClass="banner">
         <children>
            <Label alignment="TOP_LEFT" contentDisplay="TOP" text="Quizz Tool">
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <VBox styleClass="content">
         <children>
            <Label styleClass="header" text="Login" />
            <VBox styleClass="login">
               <children>
                  <Label text="Username:" />
                  <TextField fx:id="tfUsername" promptText="Enter valid username" styleClass="textfield" />
                  <Label text="Password:" />
                  <PasswordField fx:id="tfPassword" promptText="Enter correct password" styleClass="textfield" />
                  <Label fx:id="lblError" styleClass="error" />
                  <Button mnemonicParsing="false" onAction="#login" styleClass="actionButton" text="Login">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
